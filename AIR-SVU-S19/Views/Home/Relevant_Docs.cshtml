                        @Html.Editor("TxT_Search_Key", "This is value", new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    <div class="col-md-3 ">
                        @Html.DropDownList("AlgorithmRetrieve", new SelectList(
                            new List<SelectListItem>
                            {
                                new SelectListItem {Text = "Boolean Model", Value = "boolean"},
                                new SelectListItem {Text = "Extend Boolean Model", Value = "ex_boolean"},
                                 new SelectListItem {Text = "Vector Space model", Value = "vector_space"},
                            }, "Value", "Text"), new { @class = "form-control" ,@id="AlgorithmRetrieve"})
                    </div>
                </div>
                <br />
                <div class="container" style="width:15%">
